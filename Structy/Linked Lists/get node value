class Node {
  constructor(val) {
    this.val = val;
    this.next = null;
  }
}



// recursive
const getNodeValue = (head, index) => {
  if (head === null) return null
  if (index === 0) return head.val
  index --
  return getNodeValue(head.next, index)
};



module.exports = {
  getNodeValue,
};
